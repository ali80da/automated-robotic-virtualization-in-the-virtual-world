@{
	ViewData["Title"] = "صفحه اصلی";
}

<!-- Hero Section -->
<section class="min-h-screen">
	<div class="relative isolate px-6 pt-14 lg:px-8">
		<div aria-hidden="true" class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80">
			<div style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"
				 class="relative left-[calc(50%-11rem)] aspect-1155/678 w-[36rem] -translate-x-1/2 rotate-30 bg-gradient-to-tr from-[#69a7f9] to-[#5e80ce] opacity-25 sm:left-[calc(50%-30rem)] sm:w-[72rem]">
			</div>
		</div>
		<div class="mx-auto max-w-2xl py-32 sm:py-48 lg:py-56">
			<div class="text-center">
				<h1 class="text-4xl sm:text-5xl font-extrabold tracking-tight text-balance text-blue-100 mb-7 drop-shadow"
					style="text-shadow:0 1px 10px #22375c">
					مرکز اتوماسیون سرویس‌ها
				</h1>
				<p class="mt-8 text-lg font-medium text-blue-100/80 sm:text-xl/8 mb-6">
					مدیریت یکپارچه، سریع و هوشمند سرویس‌های Docker با رابط کاربری ساده و حرفه‌ای
				</p>
				<div class="mt-10 flex items-center justify-center gap-x-6">
					<a href="/services"
					   class="rounded-md bg-blue-700 px-6 py-3 text-base font-semibold text-white shadow-md hover:bg-blue-800 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-700 transition-all duration-150">
						مشاهده وضعیت سرویس‌ها
					</a>
					<a href="#features" class="text-base font-semibold text-blue-100/90 hover:text-white transition">
						بیشتر بدانید <span aria-hidden="true">→</span>
					</a>
				</div>
			</div>
		</div>
		<div aria-hidden="true" class="absolute inset-x-0 top-[calc(100%-13rem)] -z-10 transform-gpu overflow-hidden blur-3xl sm:top-[calc(100%-30rem)]">
			<div style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"
				 class="relative left-[calc(50%+3rem)] aspect-1155/678 w-[36rem] -translate-x-1/2 bg-gradient-to-tr from-[#69a7f9] to-[#5e80ce] opacity-25 sm:left-[calc(50%+36rem)] sm:w-[72rem]">
			</div>
		</div>
	</div>
</section>

<!-- معرفی ویژگی‌ها -->
<section class="py-16 bg-gray-900">
	<div class="max-w-5xl mx-auto px-4">
		<div class="flex flex-wrap -mx-4 text-center">
			<!-- Feature 1 -->
			<div class="w-full md:w-1/3 px-4 mb-10 md:mb-0">
				<div class="bg-gray-800 rounded-2xl shadow p-8 hover:shadow-lg transition-all flex flex-col items-center">
					<span class="inline-flex items-center justify-center rounded-full bg-blue-100 p-5 mb-5">
						<!-- Rocket Icon -->
						<svg class="w-10 h-10 text-blue-500" fill="none" stroke="currentColor" stroke-width="2"
							 viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round"
								  d="M5 22c0-2 4-6 7-9a7 7 0 10-9 9c3-3 7-7 9-9zM15 9l-3 3M13 7h.01" />
						</svg>
					</span>
					<h3 class="text-xl font-bold text-blue-100 mb-2">اجرای سریع</h3>
					<p class="text-blue-200">اتصال آسان به سرویس‌ها فقط با یک کلیک</p>
				</div>
			</div>
			<!-- Feature 2 -->
			<div class="w-full md:w-1/3 px-4 mb-10 md:mb-0">
				<div class="bg-gray-800 rounded-2xl shadow p-8 hover:shadow-lg transition-all flex flex-col items-center">
					<span class="inline-flex items-center justify-center rounded-full bg-green-100 p-5 mb-5">
						<!-- Shield Icon -->
						<svg class="w-10 h-10 text-green-500" fill="none" stroke="currentColor" stroke-width="2"
							 viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round"
								  d="M12 22s8-4 8-10V5a2 2 0 00-2-2H6a2 2 0 00-2 2v7c0 6 8 10 8 10z" />
						</svg>
					</span>
					<h3 class="text-xl font-bold text-blue-100 mb-2">ایمن و مدیریت‌پذیر</h3>
					<p class="text-blue-200">بررسی سلامت سرویس‌ها با یک نگاه</p>
				</div>
			</div>
			<!-- Feature 3 -->
			<div class="w-full md:w-1/3 px-4">
				<div class="bg-gray-800 rounded-2xl shadow p-8 hover:shadow-lg transition-all flex flex-col items-center">
					<span class="inline-flex items-center justify-center rounded-full bg-yellow-100 p-5 mb-5">
						<!-- Cogs Icon -->
						<svg class="w-10 h-10 text-yellow-500" fill="none" stroke="currentColor" stroke-width="2"
							 viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round"
								  d="M12 15.5a3.5 3.5 0 100-7 3.5 3.5 0 000 7zm7.5-3.5a7.5 7.5 0 01-15 0m2.54-3.36a7.5 7.5 0 019.92 0" />
						</svg>
					</span>
					<h3 class="text-xl font-bold text-blue-100 mb-2">قابل گسترش</h3>
					<p class="text-blue-200">سازگار با نیازهای آینده و سیستم‌های دیگر</p>
				</div>
			</div>
		</div>
	</div>
</section>
